    <servlet>
        <servlet-name>CreateFoodServlet</servlet-name>
        <servlet-class>com.example.hello_servlet.controller.CreateFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateFoodServlet</servlet-name>
        <url-pattern>/admin/food/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListFoodServlet</servlet-name>
        <servlet-class>com.example.hello_servlet.controller.ListFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListFoodServlet</servlet-name>
        <url-pattern>/admin/food/list</url-pattern>
    </servlet-mapping>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
